@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

LAYOUT_WITH_LEGEND()

Container_Boundary(telemetryService, "Telemetry Management Service") {
    Component(api, "Telemetry API", "Golang REST API", "Handles HTTP requests for collecting and viewing telemetry data")
    Component(telemetryCollectionService, "TelemetryCollectionService", "Service", "Processes telemetry data from devices and stores it")
    Component(telemetryDisplayService, "TelemetryDisplayService", "Service", "Provides telemetry data for users to view")
    Component(telemetryRepository, "TelemetryRepository", "Golang Interface", "Stores/gets telemetry data")
}

Rel(api, telemetryCollectionService, "Receives telemetry data from devices")
Rel(api, telemetryDisplayService, "Requests telemetry data for users")
Rel(telemetryCollectionService, telemetryRepository, "Stores telemetry records")
Rel(telemetryDisplayService, telemetryRepository, "Retrieves pre-processed telemetry records")

@enduml
